<Window x:Class="Practicheskaia10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practicheskaia10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <Label Content="Массив"/>
            <ListBox x:Name="listBoxMas" Margin="5" Height="300"/>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Button Content="Поменять максимальное и минимально значение местами" Margin="5" Click="Button_Click"/>
                <Button Content="Информация" Margin="5" Click="Button_Click"/>
                <Button Content="Выход" Margin="5" Click="Button_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
